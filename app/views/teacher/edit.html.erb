<%= link_to("Back Button", teacher_index_path, :class => 'back-link')%>

<div>
  <h1>Update Teacher</h1>
  <%= form_for(@teacher,:url => teacher_path(@teacher),:method => 'patch')do |f| %>

  <table>
  <tr>
    <th> Teacher Name</th>
    <td><%= f.text_field(:name)%></td>
  </tr>
  <tr>
  <th> Teacher Age</th>
  <td><%= f.text_field(:age)%></td>
</tr>
  <table>
  <div class="form-buttons">
    <%= f.submit("Update Teacher")%>
  </div>
  <%end%>
</div>


<h1>Add Student for <%= @teacher.name %></h1>
<%= form_for(@teacher.students.new , :url => teacher_create_student_path(@teacher),:method => 'post')do |fo| %>
<table>
<tr>
<th> Enter Student Name </th>
<td><%= fo.text_field(:name)%></td>
</tr>
<tr>
<th> Enter Student Age </th>
<td><%= fo.text_field(:age)%></td>
</tr>
<tr>
<th> Enter Student Roll no </th>
<td><%= fo.text_field(:roll_no)%></td>
</tr>
</table>
<div class="form-buttons">
  <%= fo.submit("Add Student")%>
</div>
<%end%>