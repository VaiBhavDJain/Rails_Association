
<div>
<h1>Employee</h1>
<%= link_to("Add New Employee",'employee/new',:class => 'action new')%>

<table class="listing">
  <tr class="header">
    <th>#</th>
    <th> Employee ID  </th>
    <th> Employee Name </th>
  </tr>
  <% @employee.each do |emp|%>
  <tr>
    <td><%= emp.id %></td>
    <td><%= emp.name %></td>
    <td class = "action">
      <%=link_to(" Show ",employee_path(emp.id),:class=>'action show')%>
      <%=link_to(" Edit",edit_employee_path(emp.id),:class=>'action edit')%>
      <%=link_to(" Delete ",delete_employee_path(emp.id),:class=>'action delete')%>
    </td>
  </tr>
  <%end%>
</table>

<h1>Product Details</h1>
<table style="width:100%">
  <tr class="header">
    <th>#</th>
    <th> Product ID </th>
    <th> Product Name </th>

    <br><br>
  </tr>
  <% @product.each do |pro|%>
  <tr>
    <td></td> 
    <td><%= pro.id %></td> 
    <td><%= pro.name %></td>
    <td>
      <%=link_to(" Show ",employee_show_product_path(pro.id),:class=>'action show_product')%>
    </td>
    <br>
  </tr>
  <%end%>
</table>



<h1>Picture Details </h1>
<table style="width:100%">
  <tr class="header">
    <th>#</th>
    <th> Picture ID  </th>
    <th> Picture Name </th>
    <th> Picture Owner </th>
    <th> Picture Imageable ID </th>
    <br><br>
  </tr>
  <% @picture.each do |pic|%>
  <tr>
    <td></td>
    <td><%= pic.id %></td> 
    <td><%= pic.name %></td>
    <td><%= pic.imageable_type %></td>
    <td><%= pic.imageable_id %></td>
    <br>
  </tr>
  <%end%>
</table>



<head>
<style>
table {
  border-spacing: 0.5rem;
}
td {
  padding: 0.5rem;
}
td:nth-child(1) { background: hsl(150, 50%, 50%); }
td:nth-child(2) { background: hsl(160, 60%, 50%); }
td:nth-child(3) { background: hsl(170, 70%, 50%); }
td:nth-child(4) { background: hsl(180, 80%, 50%); }
td:nth-child(5) { background: hsl(190, 90%, 50%); }
td:nth-child(6) { background: hsl(200, 99%, 50%); }
td:nth-child(7) { background: hsl(200, 20%, 50%); }
</style>
</head>
