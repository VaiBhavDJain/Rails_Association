<%= link_to("Back Button",  employee_index_path, :class => 'back-link')%>
<div>

  <h1>Show Product</h1>
  <table>
    <tr>
      <th>Product ID:- </th>
      <td><%= @product.id %></td>
    </tr>
    <tr>
      <th>Product Name :- </th>
      <td><%= @product.name %></td>
    </tr>
  </table>
</div>



<div>
  <h1>Create Picture</h1>
  <%= form_for(@product.pictures.new, :url => employee_create_product_picture_path(@product),:method => 'post')do |f| %>
 <table>
  <tr>
    <th> Enter Product Name </th>
    <td><%= f.text_field(:name)%></td>
    </tr>
  </table>
  <div class="form-buttons">
    <%= f.submit("Create Product Picture")%>
  </div>
  <%end%>
</div>