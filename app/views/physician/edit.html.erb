<%= link_to("Back Button to Index Page", physician_index_path, :class => 'back-link')%>

<div>
  <h1>Update Physician</h1>
  <%= form_for(@physician,:url => physician_path(@physician),:method => 'patch')do |f| %>

  <table>
  <tr>
    <th> Physician Name</th>
    <td><%= f.text_field(:name)%></td>
  </tr>
  <table>
  <div class="form-buttons">
    <%= f.submit("Update Physician")%>
  </div>
  <%end%>
</div>

<h1>Add Patient</h1>
<% @physician.appointments.last %>

<%= form_for(@physician.patients.new , :url => physician_create_patient_path(@physician),:method => 'post')do |fo| %>
<table>
<tr>
<th> Enter Patient Name </th>
<td><%= fo.text_field(:name)%></td>
</tr>
</table>
<div class="form-buttons">
  <%= fo.submit("Add Patient")%>
</div>
<%end%>